auto lo
iface lo inet loopback
    address 10.0.0.11/32

auto swp1
iface swp1
    bridge-access 10

auto swp11
iface swp11

auto bridge
iface bridge
    bridge-ports swp1 vxlan10
    bridge-vids 10
    bridge-vlan-aware yes

auto mgmt
iface mgmt
    vrf-table auto
    address 127.0.0.1/8

auto eth0
iface eth0 inet dhcp
    vrf mgmt
    post-up sysctl -w net.ipv6.conf.eth0.accept_ra=2

auto vlan10
iface vlan10
    address 172.31.10.111/24
    address-virtual 00:00:00:00:00:01 172.31.10.110/24
    vlan-id 10
    vlan-raw-device bridge

auto vxlan10
iface vxlan10
    bridge-access 10
    bridge-arp-nd-suppress off
    bridge-learning off
    mstpctl-bpduguard yes
    mstpctl-portbpdufilter yes
    vxlan-id 10
