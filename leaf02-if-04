auto lo
iface lo inet loopback
    address 10.0.0.12/32

auto swp1
iface swp1
    bridge-access 20

auto swp12
iface swp12

auto bridge
iface bridge
    bridge-ports swp1 vxlan20 L3VNI_Linux
    bridge-vids 20 1001
    bridge-vlan-aware yes

auto mgmt
iface mgmt
    vrf-table auto
    address 127.0.0.1/8

auto eth0
iface eth0 inet dhcp
    vrf mgmt
    post-up sysctl -w net.ipv6.conf.eth0.accept_ra=2

auto vlan20
iface vlan20
    address 172.31.20.112/24
    address-virtual 00:00:00:00:01:01 172.31.20.110/24
    vlan-id 10
    vlan-raw-device bridge
    vrf LinuxAdmin
    
auto vxlan20
iface vxlan20
    bridge-access 20
    bridge-arp-nd-suppress on
    bridge-learning off
    mstpctl-bpduguard yes
    mstpctl-portbpdufilter yes
    vxlan-id 20
    vxlan-local-tunnelip 10.0.0.12

auto LinuxAdmin
iface LinuxAdmin
  vrf-table auto

auto L3VNI_Linux
iface L3VNI_Linux
    bridge-access 1001
    bridge-arp-nd-suppress on
    bridge-learning off
    mstpctl-bpduguard yes
    mstpctl-portbpdufilter yes
    vxlan-id 1001
    
auto vlan1001
iface vlan1001
    hwaddress 44:38:39:00:00:02
    vlan-id 1001
    vlan-raw-device bridge
    vrf LinuxAdmin

